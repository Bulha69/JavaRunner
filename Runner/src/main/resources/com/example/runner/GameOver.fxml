<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.runner.GameOverController">
    <children>
        <!-- Background Image -->
        <ImageView fitHeight="600.0" fitWidth="800.0">
            <image>
                <Image url="@TSOP.png" />
            </image>
        </ImageView>

        <!-- Game Over Text -->
        <Label layoutX="220.0" layoutY="100.0" prefHeight="74.0" prefWidth="403.0" text="GAME OVER" textFill="#0002ff">
            <font>
                <Font name="Arial" size="64.0" />
            </font>
        </Label>

        <!-- Score Display -->
        <Label fx:id="scoreLabel" layoutX="300.0" layoutY="200.0" text="Score: 0" textFill="WHITE">
            <font>
                <Font name="Arial" size="36" />
            </font>
        </Label>

        <!-- Restart Button -->
        <Button fx:id="restartButton" layoutX="300.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleRestart" prefHeight="50.0" prefWidth="200.0" text="Restart Game">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Button>

        <!-- Main Menu Button -->
        <Button fx:id="menuButton" layoutX="300.0" layoutY="370.0" mnemonicParsing="false" onAction="#handleMenu" prefHeight="50.0" prefWidth="200.0" text="Main Menu">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Button>

        <!-- Quit Button -->
        <Button fx:id="quitButton" layoutX="300.0" layoutY="440.0" mnemonicParsing="false" onAction="#handleQuit" prefHeight="50.0" prefWidth="200.0" text="Quit">
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Button>
    </children>
</AnchorPane>
